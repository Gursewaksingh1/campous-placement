<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/adminnav.ejs') %>

    <main>
        <form class="product-form" action="/admin/<% if (editing) { %>edit-company<% } else { %>addcompany<% } %>" method="POST">
             <div class="form-control">
                <label for="nameOfCompany">nameOfCompany</label>
                <input type="text" name="nameOfCompany" id="nameOfCompany" value="<% if (editing) { %><%= product.nameOfCompany %><% } %>">
            </div>
            <div class="form-control">
                <label for="email">email</label>
                <input type="text" name="email" id="email" value="<% if (editing) { %><%= product.email %><% } %>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" value="<% if (editing) { %><%= product.email %><% } %>">
            
            </div>
            <div class="form-control">
                <label for="ownerName">ownerName</label>
                <input type="text" name="ownerName" id="ownerName"  value="<% if (editing) { %><%= product.ownerName %><% } %>">
            </div>
            <div class="form-control">
                <label for="aboutcompany">aboutcompany</label>
                <input type="text" name="aboutcompany" id="aboutcompany" value="<% if (editing) { %><%= product.aboutCompany %><% } %>"> </input>
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= product._id %>" name="companyid">
            <% } %>

            <button class="btn" type="submit"><% if (editing) { %>Update Product<% } else { %>add-company <% } %></button>
        </form>

    </main>
<%- include('../includes/end.ejs') %>
